<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.coffeetime">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logoproject"
        android:supportsRtl="true"
        android:theme="@style/Theme.CoffeeTime">

        //Activities
        <activity
            android:name=".auth.SignUpActivity"
            android:theme="@style/Theme.CoffeeTimeAdmin" />
        <activity
            android:name=".auth.SignInActivity"
            android:theme="@style/Theme.CoffeeTimeAdmin" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.WelcomeActivity" />
        <activity android:name=".ui.home.HomeActivity" />
        <activity android:name=".ui.UserQR.UserQRActivity"></activity>
        <activity android:name=".ui.pay.PayActivity" />
        <activity android:name=".ui.product.ProductActivity" />
        <activity android:name=".ui.profile.ProfileActivity" />
        <activity android:name=".ui.history.HistoryActivity" />
        <activity android:name=".ui.cart.CartActivity" />

        //Activities Admin
        <activity
            android:name=".admin.WelcomeAdminActivity"
            android:theme="@style/Theme.CoffeeTimeAdmin" />
        <activity
            android:name=".admin.home.HomeAdminActivity"
            android:theme="@style/Theme.CoffeeTimeAdmin" />
        <activity
            android:name=".admin.user.UserAdminActivity"
            android:theme="@style/Theme.CoffeeTimeAdmin" />
        <activity android:name=".admin.sales.SalesActivity" />
        <activity
            android:name=".admin.product.ProductAdminActivity"
            android:theme="@style/Theme.CoffeeTimeAdmin" />
    </application>
</manifest>