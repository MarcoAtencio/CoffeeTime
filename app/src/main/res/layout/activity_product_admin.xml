<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingRight="30dp"
    android:paddingLeft="30dp"
    tools:context=".admin.product.ProductAdminActivity"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:padding="15dp"
        android:text="Registrar Producto"
        android:textAlignment="center"
        android:fontFamily="@font/grotesk_medium"

        />
    <EditText
        android:id="@+id/idproduct_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="CÃ³digo de Producto"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/product_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Producto"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/category_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Categoria"
        android:inputType="number" />

    <EditText
        android:id="@+id/stock_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Stock"
        android:inputType="number" />

    <EditText
        android:id="@+id/priceProducto_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Precio"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/url_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Url"
        android:inputType="text" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:backgroundTint="#FCB302"
            android:onClick="saveProduct"
            android:padding="10dp"
            android:text="Registrar"
            android:textAllCaps="false"
            android:textColor="#0C1423"
            android:textSize="16dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:backgroundTint="#FCB302"
            android:onClick="findProduct"
            android:padding="10dp"
            android:text="Buscar"
            android:textAllCaps="false"
            android:textColor="#0C1423"
            android:textSize="16dp"
            app:cornerRadius="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="modifyProduct">

        <Button
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:backgroundTint="#FCB302"
            android:onClick="modifyProduct"
            android:padding="10dp"
            android:text="Actualizar"
            android:textAllCaps="false"
            android:textColor="#0C1423"
            android:textSize="16dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:backgroundTint="#FCB302"
            android:onClick="deleteProduct"
            android:padding="10dp"
            android:text="Eliminar"
            android:textAllCaps="false"
            android:textColor="#0C1423"
            android:textSize="16dp"
            app:cornerRadius="20dp" />
    </LinearLayout>


</LinearLayout>
